---
const { content } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1"
    />
    <meta
      name="description"
      content={content.description ||
        'Fetcch is building a suite of products to build a truly chainless future. Starting with products for finance'}
    />
    <meta name="author" content="FetcchX" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Mono:wght@400;500&family=DM+Sans:ital,wght@0,400;0,500;0,700;1,400;1,500;1,700&display=swap"
      rel="stylesheet"
    />
    <link rel="shortcut icon" href="/img/favicon.jpg" />
    <style is:global>
      @import '../styles/global.css';
    </style>

    <title>{content.title}</title>
  </head>
  <body>
    <div class="container">
      <h2 class="header">
        <a href="/" class="headshot">
          <img
            alt="image"
            class="headshot"
            src="/img/favicon.jpg"
            loading="lazy"
            decoding="async"
          />
        </a>
        {content.title}
      </h2>

      <article>
        <p><slot /></p>
      </article>

      <p class="footer">
        <span>
          <abbr
            title="This site and all its content are licensed under a MIT License."
            >made w/ ♥</abbr
          >
          by <a
            class="email"
            href="mailto:hello@fetcch.xyz"
            >Fetcch.</a
          >
          inspired by <a
            class="email"
            href="https://aidenybai.com/">Aiden Bai.</a
          >
        </span>
        <span class="home"><a href="/">← go home</a></span>
      </p>
    </div>

    <script>
      import { router } from 'million/router';
      router('.container');
    </script>
  </body>
</html>
